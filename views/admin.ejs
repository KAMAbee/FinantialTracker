<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin</title>
  <link rel="stylesheet" href="admin.css">

</head>

<body>
  <header class="header">
    <h2 class="header__title">Admin page</h2>
  </header>

  <main class="main">
    <div class="main__container">
      <h2>Users</h2>
      <div class="users__list">
        <% users.forEach(function(user) { %>
        <div class="user-item">
          <h3><%= user.username %> (<%= user.role %>)</h3>
          <p><%= user.email %></p>
          <form action="/admin/updateRole" method="POST">
            <input type="hidden" name="userId" value="<%= user._id %>">
            <select name="role" id="role">
              <option value="user" <% if (user.role === 'user') { %> selected <% } %>>User</option>
              <option value="admin" <% if (user.role === 'admin') { %> selected <% } %>>Admin</option>
            </select>
            <button type="submit">Update Role</button>
          </form>
        </div>
        <% }) %>
      </div>
    </div>
  </main>

</body>

</html>